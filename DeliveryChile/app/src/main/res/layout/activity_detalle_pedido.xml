<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".repartidor.detallePedidoActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="InvalidId,MissingConstraints"
        android:id="@+id/ly1">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:background="@color/teal_200"
            android:textStyle="bold|italic"
            android:text="Detalle pedido"
            tools:ignore="MissingConstraints"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>


    <TextView
        android:id="@+id/id_pedido_lbl"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID PEDIDO"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/ly1"/>

    <TextView
        android:id="@+id/id_pedido"
        android:layout_marginLeft="140dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:hint=""
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/ly1"
        app:layout_constraintLeft_toRightOf="@id/id_pedido_lbl"/>

    <TextView
        android:id="@+id/usuario_lbl"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="USUARIO"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="138dp"
        app:layout_constraintTop_toBottomOf="@id/id_pedido_lbl" />

    <TextView
        android:id="@+id/usuario"
        android:layout_marginLeft="140dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:hint=""
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/id_pedido" />

    <TextView
        android:id="@+id/descripcion_lbl"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="138dp"
        app:layout_constraintTop_toBottomOf="@id/usuario_lbl"
        android:hint="DESCRIPCION"
        />

    <TextView
        android:id="@+id/descripcion"
        android:layout_marginLeft="140dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:hint=""
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/usuario" />

    <TextView
        android:id="@+id/tienda_lbl"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="138dp"
        app:layout_constraintTop_toBottomOf="@id/descripcion_lbl"
        android:hint="TIENDA"
         />

    <TextView
        android:id="@+id/tienda"
        android:layout_marginLeft="140dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:hint=""
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/descripcion" />

    <TextView
        android:id="@+id/telefono_lbl"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="138dp"
        app:layout_constraintTop_toBottomOf="@id/tienda_lbl"
        android:hint="TELEFONO"
        />

    <TextView
        android:id="@+id/telefono"
        android:layout_marginLeft="140dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:hint=""
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/tienda" />

    <TextView
        android:id="@+id/direccion_lbl"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="138dp"
        app:layout_constraintTop_toBottomOf="@id/telefono_lbl"
        android:hint="DIRECCION" />

    <TextView
        android:id="@+id/direccion"
        android:layout_marginLeft="140dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:hint=""
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/telefono" />

    <TextView
        android:id="@+id/valor_total_lbl"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="138dp"
        app:layout_constraintTop_toBottomOf="@id/direccion_lbl"
        android:hint="VALOR TOTAL" />

    <TextView
        android:id="@+id/valor_total"
        android:layout_marginLeft="140dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:hint=""
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/direccion" />

    <TextView
        android:id="@+id/estado_lbl"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="138dp"
        app:layout_constraintTop_toBottomOf="@id/valor_total_lbl"
        android:hint="ESTADO" />

    <TextView
        android:id="@+id/estado"
        android:layout_marginLeft="140dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:hint=""
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/valor_total" />
    <EditText
        android:id="@+id/latitud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="invisible"
        tools:ignore="MissingConstraints">

    </EditText>
    <EditText
        android:id="@+id/longitud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="invisible"
        tools:ignore="MissingConstraints">

    </EditText>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/estado"
        >


        <Button
            android:id="@+id/btnVerMapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ver Mapa"
            app:layout_constraintTop_toBottomOf="@id/estado"
            tools:ignore="MissingConstraints"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            />


        <Button
            android:id="@+id/btnEnviarNotificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Enviar SMS"
            app:layout_constraintTop_toBottomOf="@id/txtfechamodificacion"
            tools:ignore="MissingConstraints"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            />

    </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.constraintlayout.widget.ConstraintLayout>