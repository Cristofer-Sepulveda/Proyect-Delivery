<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".repartidor.detallePedidoActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:background="@color/teal_200"
        android:textStyle="bold|italic"
        android:text="Detalle pedido"
        />

    <TextView
        android:id="@+id/id_pedido_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:hint="ID_PEDIDO"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/id_pedido"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="80dp"
        android:layout_marginRight="20dp"
        android:hint=""
        android:textSize="30dp" />

    <TextView
        android:id="@+id/usuario_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="20dp"
        android:textSize="30dp"
        android:hint="USUARIO"
        />

    <TextView
        android:id="@+id/usuario"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="140dp"
        android:layout_marginRight="20dp"
        android:textSize="30dp"
        android:hint=""
        />

    <TextView
        android:id="@+id/tienda_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="20dp"
        android:textSize="30dp"
        android:hint="TIENDA"
        />

    <TextView
        android:id="@+id/tienda"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="200dp"
        android:layout_marginRight="20dp"
        android:textSize="30dp"
        android:hint=""
        />

    <TextView
        android:id="@+id/direccion_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="20dp"
        android:hint="DIRECCION"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/direccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="20dp"
        android:textSize="30dp"
        android:hint=""
        />

    <TextView
        android:id="@+id/valor_total_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="20dp"
        android:textSize="30dp"
        android:hint="VALOR TOTAL"
        />

    <TextView
        android:id="@+id/valor_total"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="380dp"
        android:layout_marginRight="20dp"
        android:textSize="30dp"
        android:hint=""
        />

    <TextView
        android:id="@+id/estado_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="440dp"
        android:layout_marginLeft="20dp"
        android:textSize="30dp"
        android:hint="ESTADO"
        />

    <TextView
        android:id="@+id/estado"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="440dp"
        android:layout_marginRight="20dp"
        android:textSize="30dp"
        android:hint=""
        />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:text="Enviar SMS"
        android:layout_gravity="center_horizontal|bottom"
        />

</FrameLayout>