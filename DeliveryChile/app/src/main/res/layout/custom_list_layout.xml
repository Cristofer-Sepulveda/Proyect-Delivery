<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/borde_inferior"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txtidpedido"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID"
        tools:ignore="MissingConstraints"
        />
    <TextView
        android:id="@+id/tv_id_pedido"
        android:layout_marginLeft="140dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="ID"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="138dp" />
    <TextView
        android:id="@+id/txtidusuario"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Usuario"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="138dp"
        app:layout_constraintTop_toBottomOf="@id/txtidpedido" />
    <TextView
        android:id="@+id/tv_id_usuario"
        android:layout_marginLeft="140dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:text="Usuario"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_id_pedido"/>
    <TextView
        android:id="@+id/txtidtienda"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tienda"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="138dp"
        app:layout_constraintTop_toBottomOf="@id/txtidusuario" />
    <TextView
        android:id="@+id/tv_id_tienda"
        android:layout_marginLeft="140dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:text="Tienda"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_id_usuario"/>
    <TextView
        android:id="@+id/txtidproducto"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Producto"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="138dp"
        app:layout_constraintTop_toBottomOf="@id/txtidtienda" />
    <TextView
        android:id="@+id/tv_id_producto"
        android:layout_marginLeft="140dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:text="Producto"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_id_tienda"/>
    <TextView
        android:id="@+id/txtcantidad"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cantidad"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="138dp"
        app:layout_constraintTop_toBottomOf="@id/txtidproducto" />
    <TextView
        android:id="@+id/tv_cantidad"
        android:layout_marginLeft="140dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:text="Cantidad"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_id_producto"/>
    <TextView
        android:id="@+id/txtdireccion"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Direccion"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="138dp"
        app:layout_constraintTop_toBottomOf="@id/txtcantidad" />
    <TextView
        android:id="@+id/tv_direccion"
        android:layout_marginLeft="140dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:text="Direccion"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_cantidad"/>
    <TextView
        android:id="@+id/txtfecha"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="138dp"
        app:layout_constraintTop_toBottomOf="@id/txtdireccion" />
    <TextView
        android:id="@+id/tv_fecha"
        android:layout_marginLeft="140dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:text="Fecha"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_direccion"/>
    <TextView
        android:id="@+id/txtvalor"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Valor"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="138dp"
        app:layout_constraintTop_toBottomOf="@id/txtfecha" />
    <TextView
        android:id="@+id/tv_valor"
        android:layout_marginLeft="140dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:text="Valor"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_fecha"/>
    <TextView
        android:id="@+id/txtestado"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estado"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="138dp"
        app:layout_constraintTop_toBottomOf="@id/txtvalor" />
    <TextView
        android:id="@+id/tv_estado"
        android:layout_marginLeft="140dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:text="Estado"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_valor"/>
    <TextView
        android:id="@+id/txtfechamodificacion"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha Modificacion"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="138dp"
        app:layout_constraintTop_toBottomOf="@id/txtestado" />
    <TextView
        android:id="@+id/tv_fecha_modificacion"
        android:layout_marginLeft="140dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:text="Fecha Modificacion"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_estado"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/txtfechamodificacion"/>


</androidx.constraintlayout.widget.ConstraintLayout>